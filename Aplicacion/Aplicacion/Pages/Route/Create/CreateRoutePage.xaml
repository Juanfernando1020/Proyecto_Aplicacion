    <local:ContentPageBase.Resources />
    <local:ContentPageBase.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="10">
                <customEntries:IconEntryView
                    Icon="kisspng_computer_icons_user_profile_login_user_5abf1427192161_284446441522471975103.png"
                    Label="Nombre"
                    Text="{Binding Route.Name}" />
                <customEntries:IconEntryView
                    Icon="kisspng_computer_icons_user_profile_login_user_5abf1427192161_284446441522471975103.png"
                    Label="Zona"
                    Text="{Binding Route.Zone}" />
                <customPickers:IconPickerView Icon="kisspng_computer_icons_user_profile_login_user_5abf1427192161_284446441522471975103.png" Label="Trabajador">
                    <customPickers:IconPickerView.Picker>
                        <Picker
                            ItemDisplayBinding="{Binding Name}"
                            ItemsSource="{Binding WorkersCollection}"
                            SelectedItem="{Binding Worker}" />
                    </customPickers:IconPickerView.Picker>
                </customPickers:IconPickerView>
                <Button
                    Command="{Binding CreateCommand}"
                    Text="Crear Ruta"
                    VerticalOptions="EndAndExpand" />
            </StackLayout>
        </ScrollView>
