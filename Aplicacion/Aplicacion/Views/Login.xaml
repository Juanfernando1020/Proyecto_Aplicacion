<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:App.Renderes"
             x:Class="Aplicacion.Vistas.Login"
             BackgroundColor="#CCD7E1"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Spacing="30" Margin="40" >
        <custom:CustomEntry
                            HeightRequest="60"
                            TextColor="Black"
                            Keyboard="Numeric"
                            FontSize="30" 
                            x:Name="txtUsuario"
                            TextChanged="TxtUsuario_TextChanged"/>

        <ImageButton Source="Login.png"
                     VerticalOptions="CenterAndExpand"
                     BackgroundColor="Transparent"
                     Clicked="Boton_Inicio"
                     />

        <custom:CustomEntry 
                            TextColor="Black"
                            IsPassword="True"
                            FontSize="30"
                            x:Name="txtPassword"
                            />

    </StackLayout>
</ContentPage>
